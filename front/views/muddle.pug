extends layout

block content
  .container
    .row.single
      .col-md-4
        .empty-space
        .title Symptoms
        .body= muddle.symptoms
      .col-md-6
        h1= muddle.title
        .title Hotfix
        .body= muddle.hotfix
        .title Description
        .body= muddle.description
        .empty-space
        if anon
          .author.text-right by
            span &nbsp;anonymous
        else
          .author.text-right by
            a(href=authorLink)= author
